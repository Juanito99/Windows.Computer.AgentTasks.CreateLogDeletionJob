          <DaysBeforeCompressLogs>7</DaysBeforeCompressLogs>
          <DaysBeforeDeleteCompressedLogs>14</DaysBeforeDeleteCompressedLogs>
          <TimeoutSeconds>180</TimeoutSeconds>
        </WriteAction>
      </Task>
    
